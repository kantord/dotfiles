# --- Recording mode ---
mode "recording" {
    # Finish recording and return to normal
    bindsym Escape exec --no-startup-id ~/.config/i3/record-stop.sh
    bindsym Return exec --no-startup-id ~/.config/i3/record-stop.sh

    # Same key to stop as to start
    bindsym $mod+Shift+v exec --no-startup-id ~/.config/i3/record-stop.sh
}
# Enter recording mode + start capture (same key toggles on/off)
bindsym $mod+Shift+v exec --no-startup-id ~/.config/i3/record-start.sh

